<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".presentation.fragments.profile.ProfileFragment">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="62dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="60dp"
        android:orientation="horizontal">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/iv_image_profile"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginEnd="30dp"
            android:src="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/tv_user_name_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/iv_image_profile"
            android:text="Jacob Jones" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_user_name_profile"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@id/iv_image_profile"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. " />
    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="34dp"
        android:layout_marginBottom="28dp"
        app:cardCornerRadius="18sp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="24dp"
                    android:layout_marginTop="33dp">

                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_moon"
                        app:tint="@color/blue" />

                    <TextView
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="13dp"
                        android:text="@string/dark_mode" />

                    <androidx.appcompat.widget.SwitchCompat android:layout_gravity="end" />
                </GridLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="26dp"
                    android:layout_marginBottom="12dp"
                    android:background="@color/light_gray" />

                <include
                    android:id="@+id/include_account_settins"
                    layout="@layout/item_profile_settings" />

                <include
                    android:id="@+id/include_notification_settins"
                    layout="@layout/item_profile_settings" />

                <include
                    android:id="@+id/include_security_settins"
                    layout="@layout/item_profile_settings" />

                <include
                    android:id="@+id/include_storage_settins"
                    layout="@layout/item_profile_settings" />

                <include
                    android:id="@+id/include_chats_settins"
                    layout="@layout/item_profile_settings" />

                <include
                    android:id="@+id/include_devices_settins"
                    layout="@layout/item_profile_settings" />

                <include
                    android:id="@+id/include_help_settins"
                    layout="@layout/item_profile_settings" />
            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>

</LinearLayout>